{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe generate binary file",
			"command": "g++",
			"args": [
				"-fdiagnostics-color=always",
				"-D local",
				"-g",
				"${file}",
				"-o",
				"${workspaceFolder}\\compiled\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Compiler: g++"
		}
	]
}